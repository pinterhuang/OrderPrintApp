{
  "name": "vegetable-order-printer",
  "version": "1.0.8",
  "description": "蔬果大學訂單自動列印系統",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux"
  },
  "author": "Vegetable University",
  "license": "MIT",
  "dependencies": {
    "better-sqlite3": "^11.8.0",
    "node-fetch": "^2.7.0"
  },
  "devDependencies": {
    "electron": "^27.0.0",
    "electron-builder": "^24.6.4"
  },
  "build": {
    "appId": "com.vegetableuniversity.orderprinter",
    "productName": "訂單列印系統",
    "copyright": "Copyright © 2025 Vegetable University",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!**/*.md",
      "!dist"
    ],
    "asarUnpack": [
      "node_modules/better-sqlite3/**/*"
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "assets/icon.icns",
      "category": "public.app-category.business",
      "identity": null,
      "bundleVersion": "1.0.7",
      "bundleShortVersion": "1.0.7"
    },
    "linux": {
      "target": "AppImage",
      "icon": "assets/icon.png",
      "category": "Office"
    }
  }
}
